<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_8"
    android:layout_margin="@dimen/widget_margin">
    
    <FrameLayout
        android:id="@+id/widget_title_container"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        >
    <TextView 
        android:id="@+id/widget_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_55opacity"
        android:padding="4dp"
        android:layout_gravity="center"
        android:textSize="20dp"
        />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/widget_buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:divider="@drawable/divider_transparent"
        android:dividerPadding="12dp"
        android:showDividers="middle"
        android:orientation="horizontal"
        android:animateLayoutChanges="true">

        <ImageButton
            android:id="@+id/widget_decrement"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="@drawable/card_button"
            android:src="@drawable/decrement"/>

        <ImageButton
            android:id="@+id/widget_increment"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="@drawable/card_button"
            android:src="@drawable/increment"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/widget_count_container"
        android:background="@drawable/twolines_transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/widget_buttons_container"
        android:layout_below="@id/widget_title_container">
    <TextView
        android:id="@+id/widget_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/black_65opacity"
        android:textSize="30sp"/>    
    </FrameLayout>

</RelativeLayout>